<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">

    <TextView
        android:id="@+id/nthSetStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="세트 수를 입력하세요"
        android:textAlignment="center"
        android:textSize="20dp"
        android:paddingTop="@android:dimen/app_icon_size"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:onClick="start_pause"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:text="시작/정지"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@android:dimen/app_icon_size"
            android:text="세트 진행 시간"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/decrease_set"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:onClick="control_time"
                />
            <TextView
                android:id="@+id/set_time"
                android:text="0"
                android:textAlignment="center"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/increase_set"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:onClick="control_time"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@android:dimen/app_icon_size"
            android:text="휴식 시간"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/decrease_rest"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:onClick="control_time"
                />
            <TextView
                android:id="@+id/rest_time"
                android:text="0"
                android:textAlignment="center"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/increase_rest"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:onClick="control_time"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@android:dimen/app_icon_size"
            android:text="완료한 세트"
            android:textAlignment="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/set_cnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="20sp"

            />

    </LinearLayout>

</LinearLayout>
















